<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Apartments</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/favorites' ? 'active' : '' %>" href="/favorites">Favorites</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/add-apartment' ? 'active' : '' %>" href="/add-apartment">Add apartment
        </a>
      </li>
      </li>
    </ul>
    <ul class="main-header__item-list">
      <% if (!user) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Sign up</a>
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>